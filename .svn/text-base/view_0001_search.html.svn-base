		<script src="js/md5.js"></script>
		<script>
			mui.init();
		</script>
		<style>
			.mui-content {
				margin: 10px 5px;
			}
			
			a:hover {
				text-decoration: none;
			}
			
			.hot-key {
				/*border:1px solid gainsboro;*/
				/*padding: 5px 15px;*/
				margin: 10px;
				height: 31px;
				border-radius: 100px;
				font-size: 14px;
				color: #4a4a4a;
			}
			.search_div {
				background: #ffffff;
				border-radius: 6px;
				width: 68%;
